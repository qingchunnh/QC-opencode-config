{
  "$schema": "https://opencode.ai/config.json",
  "share": "disabled",
  "autoupdate": false,
  "permission": {
    "*": "ask",
    "read": "allow",
    "edit": "ask",
    "glob": "allow",
    "grep": "allow",
    "list": "allow",
    "bash": {
      "*": "ask",
      "rm *": "deny"
    },
    "task": "ask",
    "skill": "ask",
    "lsp": "ask",
    "todoread": "allow",
    "todowrite": "ask",
    "webfetch": "ask",
    "websearch": "ask",
    "codesearch": "ask",
    "external_directory": "ask",
    "doom_loop": "ask"
  },
  "provider": {
    "qcapi": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "QCAPI",
      "options": {
        "baseURL": "https://API地址/v1"
      },
      "models": {
        "glm-5-openrouter": {
          "name": "GLM-5",
            "limit": {
            "context": 200000,
            "output": 130000
          }
        },
          "kimi-k2.5": {
          "name": "kimi-k2.5",
            "limit": {
            "context": 250000,
            "output": 250000
          },
          "interleaved": {
            "field": "reasoning_content"
          }
        }
      }
    }
  }
}
